<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NSwag.MSBuild" Version="13.1.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Transacto\Transacto.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Include="BusinessTransactions\**\*.schema.json" />
    </ItemGroup>
    <Target Name="NSwag" BeforeTargets="Build">
        <ItemGroup>
          <SchemaFiles Include="$(MSBuildProjectDirectory)\BusinessTransactions\*.json" />
        </ItemGroup>
        <Copy SourceFiles="@(ReferencePath)" DestinationFolder="$(OutDir)References" />
        <Exec Command="$(NSwagExe_Core30) jsonschema2csclient /input:%(SchemaFiles.FullPath) /output:%(RelativeDir)\%(SchemaFiles.Filename).g.cs /name:%(SchemaFiles.Filename) /namespace:$(RootNamespace).BusinessTransactions /variables:Configuration=$(Configuration)" />
        <RemoveDir Directories="$(OutDir)References" />
    </Target>
</Project>
