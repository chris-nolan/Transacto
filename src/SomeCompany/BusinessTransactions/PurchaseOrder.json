{
  "$schema": "https://json-schema.org/draft/2019-09/hyper-schema",
  "$id": "http://somecompany.com/purchase-order.schema.json",
  "$ref": "#/$defs/purchase-order",
  "$defs": {
    "purchase-order": {
      "type": "object",
      "title": "Purchase Order",
      "additionalProperties": false,
      "required": [
        "vendor-id",
        "shipping-address",
        "billing-address",
        "items",
        "purchase-order-reference",
        "purchase-order-number",
        "purchase-order-id"
      ],
      "properties": {
        "purchase-order-id": {
          "title": "Purchase Order Id",
          "$ref": "#/$defs/uuid",
          "x-schema-form": {
            "key": "vendor-id",
            "type": "uuid"
          }
        },
        "purchase-order-reference" : {
          "title": "Reference Number",
          "type": "string"
        },
        "purchase-order-number" : {
          "title": "Purchase Order Number",
          "type": "integer"
        },
        "vendor-id": {
          "title": "Vendor Id",
          "$ref": "#/$defs/uuid",
          "x-schema-form": {
            "key": "vendor-id",
            "type": "uuid"
          }
        },
        "billing-address": {
          "title": "Billing Address",
          "$ref": "#/$defs/address"
        },
        "shipping-address": {
          "title": "Shipping Address",
          "$ref": "#/$defs/address"
        },
        "items": {
          "type": "array",
          "title": "Item",
          "items": {
            "type": "object",
            "title": "Item",
            "additionalProperties": false,
            "required": [
              "sku",
              "item-id",
              "quantity",
              "unit-price"
            ],
            "properties": {
              "sku": {
                "type": "string",
                "title": "SKU"
              },
              "item-id": {
                "title": "Item Id",
                "$ref": "#/$defs/uuid",
                "x-schema-form": {
                  "key": "item-id",
                  "type": "uuid"
                }
              },
              "quantity": {
                "type": "number",
                "title": "Quantity"
              },
              "unit-price": {
                "type": "number",
                "title": "Unit Price"
              }
            }
          }
        }
      }
    },
    "address": {
      "type": "object",
      "title": "Address",
      "additionalProperties": false,
      "required": [
        "name",
        "street",
        "city",
        "country"
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "street": {
          "type": "string",
          "title": "Street"
        },
        "city": {
          "type": "string",
          "title": "City"
        },
        "country": {
          "type": "string",
          "title": "Country"
        }
      }
    },
    "uuid": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
    }
  }
}
